   "source": [
    "count = 0\n",
    "with open('sample_text.txt', 'r') as file:\n",
    "    for line in file:\n",
    "        for i in range(len(line) - 1):  # loop through pairs of characters\n",
    "            if line[i] == '_' and line[i + 1] == '_':\n",
    "                count += 1\n",
    "\n",
    "print(f\"Number of '__' in the text file: {count}\")\n"
   ]
